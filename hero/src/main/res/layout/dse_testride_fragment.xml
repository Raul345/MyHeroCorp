<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_testridefeedback"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hero_logo" />


    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_white" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

        <Button
            android:id="@+id/buttonHeader"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/pllgm_button_bg"
            android:gravity="center_vertical"
            android:text="TEST RIDE FEEDBACK" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_layout"
        android:fillViewport="true">


        <LinearLayout
            android:id="@+id/top_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/top_layout"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_vehiclerating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testquestion1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:text="@string/testquestion1"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radioGroup1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton01"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="Excellent"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton02"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Good"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton03"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Average"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton04"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton05"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ridingperform"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testquestion2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:text="@string/testquestion2"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radioGroup2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton11"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="Excellent"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton12"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Good"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton13"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Average"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton14"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton15"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_vehiclefeatures"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testquestion3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:text="@string/testquestion3"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radioGroup3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton21"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="Yes"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton22"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_buyplan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testquestion4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:text="@string/testquestion4"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radioGroup4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton31"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="1-15 Days"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton32"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="15-30 Days"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton33"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="30-60 Days"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton34"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="60-90 Days"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton35"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Not Decided"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_vehiclerefer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/testquestion5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="10dp"
                    android:text="@string/testquestion5"
                    android:textColor="#000000"
                    android:textSize="18dp" />

                <RadioGroup
                    android:id="@+id/radioGroup5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton41"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="Yes"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton42"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="No"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                </RadioGroup>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:padding="8dp"
                    android:text="@string/testquestion6"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <EditText
                    android:id="@+id/prefer_edittext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:hint="Please provide your input"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:textSize="17dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_overallrating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:text="@string/testquestion7"
                    android:textColor="#000000"
                    android:textSize="17dp" />

                <RadioGroup
                    android:id="@+id/radioGroup6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/testquestion1"
                    android:background="@android:color/darker_gray"
                    android:padding="2dp">

                    <RadioButton
                        android:id="@+id/radioButton51"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:padding="3dp"
                        android:text="Excellent"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton52"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Good"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton53"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Average"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton54"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Very Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />

                    <RadioButton
                        android:id="@+id/radioButton55"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="1dp"
                        android:background="#ffffff"
                        android:checked="false"
                        android:padding="3dp"
                        android:text="Poor"
                        android:textColor="#000000"
                        android:textSize="17dp" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView
        android:id="@+id/imageview_submit_feedback"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:src="@drawable/edit_icon" />
</RelativeLayout>