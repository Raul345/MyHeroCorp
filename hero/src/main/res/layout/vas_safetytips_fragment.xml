<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_vassafety"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/vas_background"
    android:clickable="true">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hero_logo" />


    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_white" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

        <Button
            android:id="@+id/buttonHeader"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="#ffffff"
            android:gravity="center"
            android:text="VALUE ADDED SERVICES(VAS)"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:id="@+id/top_layout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/leftarrow_layout"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.05"
                    android:background="#ffffff"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/leftarrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/redarrow_left" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/warranty_layout"
                    android:layout_width="0sp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/square_bg_red"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/warranty"
                        android:layout_width="50dp"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/warranty_details_normal" />

                    <TextView
                        android:id="@+id/warranty_text"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:text="@string/warranty"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maintenance_layout"
                    android:layout_width="0sp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/square_bg_red"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/maintenance"
                        android:layout_width="60dp"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.05"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/maintenance_normal" />

                    <TextView
                        android:id="@+id/maintenance_text"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:text="@string/maintenance"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/safety_layout"
                    android:layout_width="0sp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.2"
                    android:background="#ffffff"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/safety"
                        android:layout_width="60dp"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.05"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/safety_hover" />

                    <TextView
                        android:id="@+id/safety_text"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:text="@string/safetytips"
                        android:textColor="#cc0000"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/genuineparts_layout"
                    android:layout_width="0sp"
                    android:layout_height="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/square_bg_red"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/genuineparts"
                        android:layout_width="60dp"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:layout_weight="0.05"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/genuine_parts_normal" />

                    <TextView
                        android:id="@+id/genuineparts_text"
                        android:layout_width="wrap_content"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="0.05"
                        android:gravity="center"
                        android:text="@string/genuineparts"
                        android:textColor="#ffffff"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rightarrow_layout"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.05"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/rightarrow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/redarrow_right" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/bikingtips_button"
                    android:layout_width="190dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundtextview"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="BIKING TIPS"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:layout_marginRight="15dp"
                    />

                <Button
                    android:id="@+id/safety_button"
                    android:layout_width="190dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/roundtextview"
                    android:gravity="center"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    android:text="SAFETY"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>



