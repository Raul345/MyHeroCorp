<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_closefollowup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hero_logo" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_white" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

        <Button
            android:id="@+id/buttonHeader"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/pllgm_button_bg"
            android:gravity="center_vertical"
            android:text="CLOSE ENQUIRY" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout">

        <RelativeLayout
            android:id="@+id/top_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/darker_gray">

                <ScrollView
                    android:id="@+id/scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#ffffff">

                                <TextView
                                    android:id="@+id/textView9"
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/darker_gray"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Main Reason"
                                    android:textColor="#000000"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="#424242"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/spinner_mainreason"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:spinnerMode="dialog">

                                    </Spinner>

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff">

                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/darker_gray"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Sub Reason"
                                    android:textColor="#000000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="#424242"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/spinner_subreason"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:spinnerMode="dialog">

                                    </Spinner>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff">

                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/darker_gray"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Make"
                                    android:textColor="#000000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="#424242"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/spinner_make"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:spinnerMode="dialog">

                                    </Spinner>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#ffffff">

                                <TextView
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="@android:color/darker_gray"
                                    android:gravity="center"
                                    android:padding="10dp"
                                    android:text="Model"
                                    android:textColor="#000000"
                                    android:textSize="16dp" />

                                <LinearLayout
                                    android:layout_width="0sp"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:layout_weight="0.5"
                                    android:background="#424242"
                                    android:gravity="center">

                                    <Spinner
                                        android:id="@+id/spinner_model"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:spinnerMode="dialog">

                                    </Spinner>

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@android:color/darker_gray"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView12"
                                    android:layout_width="1006dp"
                                    android:layout_height="wrap_content"
                                    android:background="#e0e0e0"
                                    android:paddingLeft="30dp"
                                    android:paddingTop="10dp"
                                    android:text="Remark"
                                    android:textColor="#000000"

                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/edittext_remark"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="1dp"
                                    android:background="#e0e0e0"
                                    android:hint="Remark"
                                    android:imeOptions="actionDone"
                                    android:paddingBottom="10dp"
                                    android:paddingLeft="30dp"
                                    android:textColor="#000000"
                                    android:textSize="18dp" />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

            </RelativeLayout>

            <ImageView
                android:id="@+id/imageView_closefollowup"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:src="@drawable/cross_icon" />

        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView_submit_closefollowup"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="15dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:src="@drawable/edit_icon" />
</RelativeLayout>
