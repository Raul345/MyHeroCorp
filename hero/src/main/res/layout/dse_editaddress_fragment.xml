<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#757575"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Address Detail"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/top_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0.5dp"
            android:background="@android:color/darker_gray"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textview1"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="#ffffff"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="Edit Address"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/top_layout3"
                android:layout_width="0sp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editaddress_button"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/button_offf" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical">


            <LinearLayout
                android:id="@+id/top_layout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/state_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="State"
                    android:textColor="#000000"
                    android:textSize="16dp"
                     />

                <LinearLayout
                    android:id="@+id/top_layout10"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout20"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/state_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:background="#ffffff"
                        android:dropDownSelector="#f30d0d"
                        android:focusable="true"
                        android:spinnerMode="dialog"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/district_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="District"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:id="@+id/top_layout12"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout19"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/district_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:background="#ffffff"
                        android:dropDownSelector="#f30d0d"
                        android:focusable="true"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/tehsil_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Tehsil"
                    android:textColor="#000000"
                    android:textSize="16dp"
                     />

                <LinearLayout
                    android:id="@+id/top_layout14"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/tehsil_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:background="#ffffff"
                        android:dropDownSelector="#f30d0d"
                        android:focusable="true"
                        android:textSize="10dp"
                        android:spinnerMode="dialog"/>
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/top_layout15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/city_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="City/Village/Tc"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    />

                <LinearLayout
                    android:id="@+id/top_layout17"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout18"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dialog"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:background="#ffffff"
                        android:dropDownSelector="#f30d0d"
                        android:focusable="true"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Address1"
                    android:textColor="#000000"
                   android:textSize="16dp"

                    android:id="@+id/textView4" />

                <LinearLayout
                    android:id="@+id/top_layout26"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/address1_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="e.g. your primary address"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Address2"
                    android:textColor="#000000"

                    android:textSize="16dp"
                    android:id="@+id/textView3" />

                <LinearLayout
                    android:id="@+id/top_layout28"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/address2_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="e.g. your order address"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout29"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:text="Pin Code"
                    android:textColor="#000000"
                    android:textSize="16dp"
                     />

                <LinearLayout
                    android:id="@+id/top_layout30"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/pincode_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:digits="@string/numbers"
                    android:hint="Enter pincode"
                    android:maxLength="6"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>