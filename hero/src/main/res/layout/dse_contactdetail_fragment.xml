<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_contactdetail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    android:clickable="true">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hero_logo" />

    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_white" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

        <Button
            android:id="@+id/buttonHeader"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/pllgm_button_bg"
            android:gravity="center_vertical"
            android:text="CONTACT DETAIL" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/top_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout">

        <RelativeLayout
            android:id="@+id/top_layout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#90000000">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#80000000"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/cust_name_textview"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:background="#80000000"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Username"
                                android:textColor="#ffffff"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/agesex_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="14dp"
                                android:text="Age/Sex"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Mobile         :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/mobile_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="9798657664"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="District     :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/district_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Jammu"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Email           :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/email_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="abc@gmail.com"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Tehsil       :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/tehsil_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Jammu"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="State            :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/state_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Jammu"
                                android:textColor="#ffffff" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="5">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="City           :"
                                android:textColor="#ffffff" />

                            <TextView
                                android:id="@+id/city_textview"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Jammu"
                                android:textColor="#ffffff" />

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#80000000"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <Button
                                android:id="@+id/cust_id"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="#00000000"
                                android:drawableLeft="@drawable/customer_id_icon"
                                android:gravity="center_vertical"
                                android:paddingBottom="10dp"
                                android:paddingLeft="20dp"
                                android:paddingTop="10dp"
                                android:text="Customer_id"
                                android:textSize="15dp" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#757575"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:padding="10dp"
                                android:text="Enquiries"
                                android:textColor="#ffffff" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/addenquiry_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="10dp"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="50dp"
                                    android:src="@drawable/add_icon" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_margin="15dp"
                                    android:gravity="center"
                                    android:padding="15dp"
                                    android:text="Click here to add a new enquiry"
                                    android:textColor="#000000"
                                    android:textSize="18dp">

                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/viewenquiry_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="#ffffff"
                                    android:descendantFocusability="afterDescendants"
                                    android:paddingBottom="5dp"
                                    android:paddingLeft="1dp"
                                    android:paddingRight="2dp"
                                    android:paddingTop="5dp">


                                    <LinearLayout
                                        android:id="@+id/layout_enquiry"
                                        android:layout_width="0sp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="4dp"
                                        android:layout_weight="0.3"
                                        android:orientation="vertical">

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textview1"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Model:  "
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="12sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/textview_x_model_interested"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Passion Plus"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="13sp" />
                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textview8"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Date of Enquiry:  "
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="12sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/textview_enquiry_date"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="13-AUG-2016"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="13sp" />

                                        </LinearLayout>


                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textview5"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Expected Purchase Date:  "
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="12sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/textview_expctd_dt_purchase"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="13-AUG-2016"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="13sp" />

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:orientation="horizontal">

                                            <TextView
                                                android:id="@+id/textview6"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Next Follow Date:  "
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="12sp"
                                                android:textStyle="bold" />

                                            <TextView
                                                android:id="@+id/textview_follow_date"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:text="13-AUG-2016"
                                                android:textAppearance="?android:attr/textAppearanceLarge"
                                                android:textColor="#000000"
                                                android:textSize="13sp" />

                                        </LinearLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="0sp"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="50dp"
                                        android:layout_weight="0.4"
                                        android:gravity="end"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/img_pendingfollowup_check"
                                            android:layout_width="0sp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_weight="0.05"
                                            android:gravity="end"
                                            android:scaleType="fitCenter"
                                            android:src="@drawable/error_icon"
                                            android:visibility="visible" />

                                        <Button
                                            android:id="@+id/button_close"
                                            android:layout_width="0sp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="15dp"
                                            android:layout_weight="0.1"
                                            android:background="#cc0000"
                                            android:gravity="center"
                                            android:paddingBottom="10dp"
                                            android:paddingLeft="30dp"
                                            android:paddingRight="30dp"
                                            android:paddingTop="10dp"
                                            android:text="Close"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />

                                        <Button
                                            android:id="@+id/button_followup"
                                            android:layout_width="0sp"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            android:layout_marginLeft="20dp"
                                            android:layout_marginRight="20dp"
                                            android:layout_weight="0.1"
                                            android:background="#757575"
                                            android:gravity="center"
                                            android:paddingBottom="10dp"
                                            android:paddingLeft="30dp"
                                            android:paddingRight="30dp"
                                            android:paddingTop="10dp"
                                            android:text="Followup"
                                            android:textSize="15dp"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#757575"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:padding="10dp"
                                android:text="Existing Vehicle Detail"
                                android:textColor="#ffffff" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:orientation="horizontal">

                        <ListView
                            android:id="@+id/list_existingvehicle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:divider="@android:color/darker_gray"
                            android:dividerHeight="0.5dp"
                            android:focusable="true" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>

        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>