<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_personalinfo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dashboard"
    android:clickable="true">

    <ImageView
        android:id="@+id/app_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/hero_logo" />


    <ImageView
        android:id="@+id/menu_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_menu_white" />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_logo"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

        <Button
            android:id="@+id/buttonHeader"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:background="@drawable/pllgm_button_bg"
            android:gravity="center_vertical"
            android:text="ADD PERSONAL INFO" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0sp"
            android:layout_height="1dp"
            android:layout_weight="0.35"
            android:background="#ffffff" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_layout">

        <LinearLayout
            android:id="@+id/top_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstname_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="First Name*"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout22"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/firstname_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter first name"
                    android:imeOptions="actionDone"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastname_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Last Name*"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout23"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/lastname_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter last name"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Mobile*"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout24"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/mobile_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:digits="@string/numbers"
                    android:hint="Enter mobile no"
                    android:imeOptions="actionDone"
                    android:maxLength="10"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout32"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"

                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout33"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/email_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="e.g. abc@xyz.com"
                    android:imeOptions="actionDone"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Age"
                    android:id="@+id/age_tv"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Gender"
                    android:id="@+id/gender_tv"
                    android:textColor="#000000"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/age_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:digits="@string/numbers"
                    android:gravity="center"
                    android:hint="Enter age"
                    android:maxLength="3"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>

                <LinearLayout
                    android:id="@+id/top_layout7"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout21"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:spinnerMode="dialog" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="5"
                    android:background="@android:color/darker_gray"
                    android:padding="10dp"
                    android:text="ADDRESS DETAIL"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/state_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="State"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout10"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout20"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/state_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:focusable="true"
                        android:spinnerMode="dialog"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/district_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="District"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout12"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout19"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/district_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:focusable="true"
                        android:spinnerMode="dialog"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout13"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/tehsil_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Tehsil"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout14"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout18"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/tehsil_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:focusable="true"
                        android:spinnerMode="dialog"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:id="@+id/city_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="City/Village/Tc"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout16"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout17"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/city_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="30dp"
                        android:layout_weight="4"
                        android:focusable="true"
                        android:spinnerMode="dialog"
                        android:textSize="10dp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout25"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Address1"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>

                <LinearLayout
                    android:id="@+id/top_layout26"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/address1_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="e.g. your primary address"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout27"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Address2"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout28"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />


                <EditText
                    android:id="@+id/address2_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="e.g. your order address"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout29"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray">

                <TextView
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Pincode"
                    android:textColor="#000000"
                    android:textSize="20dp" />

                <LinearLayout
                    android:id="@+id/top_layout30"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/pincode_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:digits="@string/numbers"
                    android:hint="Enter pincode"
                    android:maxLength="6"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:imeOptions="actionDone"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout31"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imageview_submit_personalinfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="10dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:src="@drawable/edit_icon" />
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>