<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/top_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#757575"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Personal Info"
                android:textColor="#ffffff"
                android:textSize="15dp"
                android:textStyle="bold" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/top_layout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/firstname_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="First Name*"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/top_layout22"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/firstname_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter first name"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastname_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Last Name*"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/lastname_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter Last name"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/mobile_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Mobile*"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/mobile_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter Mobile no"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/email_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/email_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter email address"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/age_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Age"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="1.5"
                    android:background="#ffffff"
                    android:orientation="horizontal" />

                <EditText
                    android:id="@+id/age_edittext"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_marginTop="0.5dp"
                    android:layout_weight="3.5"
                    android:background="#ffffff"
                    android:hint="Enter Age"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/top_layout7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gender_textview"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="Gender"
                    android:textColor="#000000"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/top_layout16"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="5"
                    android:background="#ffffff">

                    <LinearLayout
                        android:id="@+id/top_layout17"
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_margin="0.5dp"
                        android:layout_weight="0.2"
                        android:background="#ffffff"
                        android:orientation="horizontal"></LinearLayout>

                    <Spinner
                        android:id="@+id/gender_spinner"
                        android:layout_width="0sp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.4"
                        android:background="#ffffff"
                        android:dropDownSelector="#f30d0d"
                        android:focusable="true"
                        android:textSize="10dp"
                        android:spinnerMode="dialog"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>